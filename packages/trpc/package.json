{
  "name": "@thread/trpc",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./services/*": "./src/services/*.ts"
  },
