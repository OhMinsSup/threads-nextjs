{
  "name": "@thread/trpc",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    "./nextjs": {
      "import": {
        "types": "./dist/nextjs.d.ts",
        "default": "./dist/nextjs.js"
      },
      "require": {
        "types": "./dist/nextjs.d.cts",
        "default": "./dist/nextjs.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "build:pkg": "tsup",
    "clean": "rm -rf .turbo node_modules",
    "dev": "tsup --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "prettier": "@thread/prettier-config",
  "dependencies": {
    "@epic-web/remember": "^1.1.0",
    "@thread/db": "workspace:*",
    "@thread/sdk": "workspace:*",
    "@trpc/server": "catalog:",
    "superjson": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@thread/eslint-config": "workspace:*",
    "@thread/prettier-config": "workspace:*",
    "@thread/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}
