    "@thread/sdk": "workspace:*",
    "@thread/shared": "workspace:*",
    "@thread/error": "workspace:*",
    "@epic-web/remember": "^1.0.2",
    "@trpc/server": "11.0.0-rc.364",
    "superjson": "2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@thread/eslint-config": "workspace:*",
    "@thread/prettier-config": "workspace:*",
    "@thread/tsconfig": "workspace:*",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2"
  },
  "prettier": "@thread/prettier-config"
